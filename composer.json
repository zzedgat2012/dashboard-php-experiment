{
    "name": "learning-php/login-app",
    "description": "Login app for learning PHP best practices",
    "type": "project",
    "version": "1.0.0",
    "minimum-stability": "stable",
    "license": "MIT",
    "require": {
        "php": ">=8.1 <8.5",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpstan/phpstan": "^1.11"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "@php -S 127.0.0.1:8000 -t public",
        "test": "phpunit --colors=always",
        "fix": "php-cs-fixer fix --verbose --allow-risky=yes --config=.php-cs-fixer.dist.php",
        "check": "php-cs-fixer check --verbose --allow-risky=yes --config=.php-cs-fixer.dist.php",
        "analyse": "phpstan analyse src --memory-limit=1G"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
